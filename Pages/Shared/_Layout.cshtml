<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cnossus</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cnossus.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                
                <div class="d-sm-inline-flex justify-content-between ohno">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <a class="navbar-brand text-light" asp-area="" asp-page="/Index">Cnossus</a>
                        </li>
                        <li>
                            <a class="navli text-light" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li>
                            <a class="navli text-light" asp-area="" asp-page="/Mods">Mods</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Cnossus is not an official product of, nor affiliated with Rinth, Inc. All mods on this site have been retrieved from the <a href="https://modrinth.com">Modrinth</a> Web API
        </div>
    </footer>

    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>